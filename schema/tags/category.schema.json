{
  "$id": "https://github.com/cefn/lowban/tree/v0.2.0/schema/tags/category.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "tagIdPattern": {
      "$comment": "A category tag starts with an alphabetical character",
      "type": "string",
      "pattern": "^[a-zA-Z\\d\\s:\\u00C0-\\u00FF].*$"
    }
  },
  "allOf": [
    { "$ref": "../tag.schema.json#/definitions/tag" },
    {
      "properties": {
        "id": {
          "$ref": "#/definitions/tagIdPattern"
        }
      }
    }
  ]
}

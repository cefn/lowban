{
  "$id": "https://github.com/cefn/lowban/tree/v0.2.0/domain/todo/schema/db.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "tagIdsList": {
      "properties": {
        "tagIds": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Tag strings in an array"
        }
      }
    },
    "tagIdsString": {
      "properties": {
        "tagIds": {
          "type": "string",
          "pattern": "^\\s*(([^\\s,]+)(\\s*[^\\s,]+)*)?\\s?$",
          "description": "Tags separated by space"
        }
      }
    }
  }
}